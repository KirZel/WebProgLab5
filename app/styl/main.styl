gridareamixin(i1,i2,i3,i4)
	grid-area i1 / i2 / i3 / i4

marginwidthmixin(marg,widt){
	margin marg
	width widt
}


ColorGrey = #303030

h1
	text-align center

.searchbar
	height 30px
	background #303030
	text-align right
	margin 0px

.searchbar 
	& input
		width 50%
		height 1.5em

.searchbar
	& img
		margin auto

.menubar
	height 2.5em 
	background LightBlue 
	padding 3px

.menucontainer
	height 100%
	margin auto
	display flex
	flex-direction row
	justify-content flex-end
	& .zagolovok
		margin-right auto
		margin-top 15px
		font-weight bold
		font-size 1em

.not_active
	height 40% 
	width 12% 
	background ColorGrey 
	color white 
	margin auto 3px 
	padding 5px 
	padding-top 15px
	&:hover
		height 80%
		width 12%
		background #000000
		color white
		margin auto 3px
		padding 5px
		padding-top 15px
.active
	height 80%
	width 12%
	background #000000
	color white
	margin auto 3px
	padding 5px
	padding-top 15px

.gallery
	height 25%
	width 90%
	display grid
	grid-template-columns 1fr 1fr
	grid-template-rows 1fr 1fr
	margin 10px auto
	grid-gap 1px
	& img
		width 100%
		height 100%
	& > .img1
		gridareamixin(1,1,3,2)
	& > .img2
		gridareamixin(1,2,2,3)
	& > .img3
		gridareamixin(2,2,3,3)

.content
	margin auto
	display flex
	flex-direction row
	width 90%
	justify-content space-between

.blocktext
	width 30%
	border 2px solid black
	& h3
		text-align center
		margin 2px
	& p
		text-align center
		margin 2px
.imagesmall
	width 50px
	height 30px
.imagebig
	width 100%
	height 40%
.text
	text-align justify

.blockofblocks
	width 30%
	display flex
	flex-direction column
	justify-content space-around

.textandpic
	height 30%
	display flex
	flex-direction row
	padding 5px
	margin 10px auto
	& h3
		margin 2px
	& .text
		marginwidthmixin(4px,50%)
	& .pic
		marginwidthmixin(4px,50%)
	transition all 0.2s ease
	&:hover
		transform scale(1.2)
.pic 
	& img
		width 100%
		height 100%

.contacts 
	vertical-align middle 
	 background grey
	 margin-top 10px
	 padding 15px

.rightc
	float right

@media(max-width: 660px)
	.menubar
		height 8.5em
		background white
		padding 3px	
	.menucontainer
		display grid
		grid-template-columns 1fr 1fr 1fr
		grid-template-rows 1fr 1fr 
	.menubar 
		& .zagolovok
			margin auto
			gridareamixin(1,1,2,4)
	.not_active
		height 60%
		width 120px
		background ColorGrey
		color white
		margin auto
		padding 5px
		&:hover
			height 80%
			width 120px
			background #000000
			color white
			margin auto
			padding 5px
			padding-top 10px
	.active
		height 80%
		width 120px
		background #000000
		color white
		margin auto
		padding 5px
		padding-top 10px

	.content
		flex-direction column
	.blocktext
		width 100%
		margin 10px 0px
		border 1px solid black
	.blockofblocks
		width 100%
	.gallery
		width 90%
		grid-template-columns 1fr
		grid-template-rows 2fr 1fr 1fr
		& > .img1
			gridareamixin(1,1,2,2)
		& > .img2
			gridareamixin(2,1,3,2)
		& > .img3
			gridareamixin(3,1,4,2)

	.textandpic
		transition all 0.2s ease
		&:hover
			transform scale(1.1)